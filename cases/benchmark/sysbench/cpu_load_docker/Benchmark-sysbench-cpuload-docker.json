{
  "Name": "Benchmark-Test-sysbench-docker",
  "Summary": "test with sysbench tool",
  "Owner": "wangqilin2@huawei.com",
  "Description": "Test cpu performance via caculate the max prime number of a given number",
  "Group": "Performance/Benchmark/sysbench/cpu_load",
  "License": "Apache 2.0",
  "Explains": "",
  "Requires": [
    {
      "Class": "operOS",
      "Type": "os",
      "Distribution": "ubuntu",
      "Version": 14.04,
      "Resource": {
        "CPU": 1,
        "Memory": "2GB",
        "Disk": "10G"
      }
    },
    {
      "Class": "sysbench",
      "Type": "container",
      "Distribution": "Docker",
      "Version": 1,
      "Files": [
        "./source/Dockerfile",
        "./source/cpuload.sh"
      ]
    }
  ],
  "Deploy": [
    {
      "Object": "hostA",
      "class": "operOS",
      "Files": [
        "./source/Dockerfile",
        "./source/cpuload.sh"
      ],
       "Cmd": "./host_deploy.sh -f cpu_usage.go ; ./docker_deploy.sh",
      "Containers": [
        {
          "Object": "sysbench-terminal",
          "Class": "sysbench"
        }
      ]
    }
  ],
  "Collects": [
    {
      "Object": "hostA",
      "Files": [
        "./source/sysbench-cpuload-output.json"
      ]
    }
  ]
}